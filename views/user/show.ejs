<% include ../partials/header %>

<div class = "ui container">
    <div class = "ui grid">
        <div class = "ten wide column">
            <img class = "ui medium image" src="<%= user.avatar%>">
            <span><%= user.username%></span>
            <div class = "ui hidden divider"></div>
            <div class = "ui basic segment">
              <h4>Bio</h4>
                <p> <%= user.Bio%></p>
            </div>
        </div>
        <div class = "six wide column"></div>
    </div>
    <div class = "ui section divider"></div>
  <div class="ui three column grid">
    <% campground.forEach(function(campg){ %>
  <div class="column">
    <div class="ui fluid card">
      <div class="image">
        <img src="<%= campg.image %>">
      </div>
      <div class="content">
        <a class="header"><%= campg.name %></a>
      </div>
      <div class = "extra content">
          <div class = "ui teal button">
              <a href = "/campground/<%= campg._id %>">More Info</a>
          </div>
      </div>
    </div>
  </div>
  <% }) %>
 </div> 
 <div class = "ui hidden divider"></div>
 <div class = "row">
     <% if(pages && pages> 0) { %>
     <div class = "ui pagination menu">
        <% if (current == 1) { %>
        <a class = "item">First</a>
        <% } else { %>
        <a class = "item" href="/user/<%= user._id%><%if(search){%> ?search= <%=search%><% } %>">First</a>
        <% } %>
     
     <% if(current == 1) {%>
     <a class = "item">«</a>
     <% } else { %>
     <a class = "item" href="/user/<%=user._id%>?page=<%= Number(current) - 1 %><%if(search){%>&search=<%=search%><% } %>">«</a>
     <% } %>
     <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
     <% if (i !== 1) { %>
     <a class = "item">...</a>
     <% } %>
     <% for(; i <= (Number(current) + 4) && i <= pages; i++) { %>
     <% if (i == current) { %>
     <a class = "item"><%= i %></a>
     <% } else {%>
     <a class = "item" href="/user/<%= user._id%>?page=<%= i %><%if(search){%>&search=<%=search%><% }%>"><%= i %></a>
     <% } %>
     <% if (i == Number(current) + 4 && i < pages) {%>
     <a class = "disabled item">...</a>
     <% } %>
     <% } %>
     
     <% if (current == pages) { %>
     <a class = "disabled item">»</a>
     <% } else { %>
     <a class = "item" href="/user/<%= user._id%>?page=<%= Number(current) + 1 %><%if(search){%>&search=<%=search%><% } %>">»</a>
     <% } %>
     
     <% if (current == pages) { %>
     <a class = "item">Last</a>
     <% } else { %>
     <a class = "item" href="/user/<%= user._id%>?page=<%= pages %><%if(search){%>&search=<%=search%><% }%>">Last</a>
     <% } %>
   <% } %>
 </div>
  </div>
 
 <div class = "ui divider"></div>
  <div id = 'gobck' class = "ui grey basic button">
        <a href = "/campground">Go back</a>
 </div>
 
</div>

<% include ../partials/footer%>


