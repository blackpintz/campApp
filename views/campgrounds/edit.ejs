<!--Create an edit form-->

<% include ../partials/header %>

<div class = "ui grid container">
    <div class = "ui two column centered grid">
              <h1>Edit <%=campground.name %></h1>
                <div class = "column">
                    <form id = "campground" class = "ui large form" action = "/campground/<%= campground._id %>?_method=PUT" method = "POST" enctype = "multipart/form-data">
                <div class="required field">
                    <label>Name of campground</label>
                    <input type="text" name="name" value = "<%= campground.name %>">
                </div>
                <div class = "field">
                    <label>Image</label>
                    <input type="file" name = "image"  accept = "image/*">
                </div>
                <div class = "required field">
                    <label>Location</label>
                    <input type="text" name = "location" value = "<%= campground.location %>">
                </div>
                <div class = "required field">
                    <label>Price</label>
                    <input type="number" name = "price" value = "<%= campground.price%>" min="5" step="0.01">
                </div>
                <div class = "field">
                    <label>Describe the campground</label>
                    <textarea name = "description">
                        <%= campground.description%>
                    </textarea>
                </div>
                <div class = "ui two column centered grid">
                    <div class = "eight column centered row">
                        <button class="ui teal button" type="submit">Submit</button>
               </div>
               </div>
             </form>
         </div>
    </div>
</div>



